<%= form_for @user do |f| %>
  <%= render partial: 'shared/error_messages', locals: {object: @user} %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :dob %><br>
    <%= f.text_field :dob %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br>
    <%= f.text_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
<br>
