
<h2>Your Cart </h2>
<table>
  <tr>
    <th>Product</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Tax rate</th>
    <th>Amount</th>
    <th colspan="3"></th>
  </tr>
 
  <% @cart.cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.product.name %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= cart_item.price %></td>
      <td><%= cart_item.tax_rate %></td>
      <td><%= sprintf("%.2f", cart_item.total_price) %></td>
      <td><%= link_to "Add (+1)", cart_item_add_path(id: cart_item.id), method: :post, remote: true %><td>
      <td><%= link_to "Reduce (-1)", cart_item_reduce_path(id: cart_item.id), method: :post, remote: true %><td>
      <td><%= link_to "Remove item", cart_item_path(cart_item), method: :delete %><td>
  <% end %>
</table>

<br>
<%= "Total Cart Amount: #{sprintf("%.2f",current_user.cart.sub_total)}" %><br>
<%= "Total Cart Tax: #{sprintf("%.2f",current_user.cart.total_tax)}" %><br>
<br>

<%= link_to "Proceed to checkout", new_order_path %>
<%= link_to "Add items", products_path %>
<%= link_to "Back to your profile", current_user %>
