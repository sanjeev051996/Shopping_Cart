<h1>All products</h1>
<table>
  <tr>
    <th>NAME</th>
    <th>Image</th>
    <th>PRICE</th>
    <th>STOCK</th>
    <th colspan="3"></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= image_tag product.avatar.url(:thumb) %></td>
      <td><%= product.price %></td>
      <td><%= product.stock %></td>
      <td><%= button_to 'Add to Cart', add_item_carts_path(product_id: product.id), method: :post %></td>
      <td><%= link_to 'View complete details', product_path(product) %></td>
      <td><%= button_to 'Remove product', product_path(product), method: :delete,
              data: { confirm: 'Are you sure?' }  if current_user.admin? %></td>
  <% end %>
</table>
<%= link_to 'Back to your profile', profile_users_path %>
<%= link_to 'Go to cart', display_carts_path %>
<%= link_to 'Add product', new_product_path if current_user.admin? %>
