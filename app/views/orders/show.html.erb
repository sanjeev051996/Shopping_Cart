<h1>Order Details</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Status</th>
    <th>TransactionID</th>
    <th>TotalAmount</th>
    <th>TotalTax</th>
    <th>Shipping address</th>
    <th>Payment Date</th>
    <th>Payment Mode</th>
    <th>Shipped_on</th>
    <th>Delivered_on</th>
    <th colspan="3"></th>
  </tr>
    <tr>
      <td><%= @order.id %></td>
      <td><%= @order.created_at.to_date %></td>
      <td><%= @order.status %></td>
      <td><%= @order.transaction_id %></td>
      <td><%= sprintf("%.2f", @order.amount) %></td>
      <td><%= sprintf("%.2f", @order.tax) %></td>
      <td><%= @order.address %></td>
      <td><%= @order.payment_date %></td>
      <td><%= @order.payment_mode %></td>
      <td><%= @order.shipped_on %></td>
      <td><%= @order.delivered_on %></td>
</table>
<%= link_to "Change status", edit_order_path(@order) if current_user.admin? %>
<h1>All Order Items</h1>
<table>
  <tr>
    <th>Product</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Tax rate</th>
    <th>Amount</th>
    <th colspan="3"></th>
  </tr>
  <% @order.order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.product.name %></td>
      <td><%= order_item.quantity %></td>
      <td><%= order_item.price %></td>
      <td><%= order_item.tax_rate %></td>
      <td><%= sprintf("%.2f", order_item.total_price) %></td>
  <% end %>
</table>
<br>
<%= "Total order amount is: #{sprintf("%.2f", @order.amount)}" %><br>
<%= "Total order tax is: #{sprintf("%.2f", @order.tax)}" %><br>
<br>
<br>
<%= link_to 'Make Payment', order_pay_path(id: @order.id), method: :post if @order.status == "unpaid" %>
<br>
<br>
<%= link_to 'All orders', orders_path  if current_user.admin? %>
<%= link_to 'Back to your Profile', profile_path %>
