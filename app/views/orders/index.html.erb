<h1>All Orders</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Status</th>
    <th>User Name</th>
    <th>Total Amount</th>
    <th colspan="3"></th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.status %></td>
      <td><%= order.user.name %></td>
      <td><%= order.amount %></td>
      <td><%= link_to 'View Order Details', order_path(order) %></td>
      <td><%= link_to 'Remove Order', order_path(order), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to 'Back to your profile', profile_users_path %>
